<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, :cols => 4, :rows => 3, placeholder: "Compost new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  <% end %>
